{{del-toolbar}}

<md-content>

    {{#md-list}}

        {{#each model as |dish index|}}

            {{#md-list-item class="md-3-line"}}

                <img class="md-avatar" src="img/dish.jpg" alt="{{dish.name}}">
                <div class="md-list-item-text">
                    <h3>{{dish.name}}</h3>
                    <h4>{{dish.description}}</h4>
                    <p>{{dish.ingredientList}}</p>
                </div>

            {{/md-list-item}}

        {{/each}}

    {{/md-list}}

</md-content>